haute :: Int
haute = 1


afficheJeu1 :: Int -> Int -> Int -> IO ()
afficheJeu1 num1 num2 hauteur1
    | num1 < 4 && num2 < 4 && hauteur1 < 4 = do
        let piece = jeu !! num2 !! num1
        putStr piece
        afficheJeu1 (num1 + 1) num2 hauteur1
    | num2 < 4 && hauteur1 < 4 = do
        putStrLn ""
        afficheJeu1 0 (num2 + 1) hauteur1
    | otherwise = return ()





